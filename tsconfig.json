{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist/scripts"
    },
    "filesGlob": [
        "src/**/*.ts",
        "typings/tsd.d.ts",
        "!dist/**",
        "!node_modules/**"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "files": [
        "src/index.ts",
        "src/modules/list/class/ListComponent.ts",
        "src/modules/list/index.ts",
        "src/modules/main/class/Application.ts",
        "src/modules/main/config.ts",
        "src/modules/main/index.ts",
        "src/modules/menu/class/Menu.ts",
        "src/modules/menu/class/MenuController.ts",
        "src/modules/menu/class/MenuDirective.ts",
        "src/modules/menu/index.ts",
        "typings/tsd.d.ts"
    ]
}
